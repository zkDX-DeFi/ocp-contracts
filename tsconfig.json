{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
  },
  "include": [
    "hardhat.config.ts",
    "./scripts",
    "./deploy",
    "./test",
    "./helpers",
    "./tasks",
    "typechain/**/*"
  ]
}
